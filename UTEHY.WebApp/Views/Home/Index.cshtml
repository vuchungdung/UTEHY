                </div>
            </div>
        </div>
        <div class="row multi-row-clearfix">
            <div class="col-md-12">
                <div class="owl-carousel-3col" data-nav="true">
                    @{
                        foreach (var item in Model.TinTucs)
                        {
                            <div class="item">
                                <div class="campaign bg-white maxwidth500 mb-30">
                                    <div class="thumb">
                                        <img src="@item.Img" style="width:327px;height:280px" alt="" class="img-fullwidth">
                                        <div class="campaign-overlay"></div>
                                    </div>
                                    <div class="campaign-details clearfix p-30">
                                        @if (item.Name.Length > 24)
                                        {
                                            <h3 class="mt-0 mb-0"><a href="#">@item.Name.Substring(0, 24)...</a></h3>
                                        }
                                        else
                                        {
                                            <h3 class="mt-0 mb-0"><a href="#">@item.Name</a></h3>
                                        }
                                        <ul class="mb-10">
                                            <li class="text-theme-colored2"><span class="text-theme-colored">@item.CreateDate.ToString("dd/MM/yyyy")</span></li>
                                        </ul>
                                        <a class="btn btn-theme-colored font-weight-600 font-11 mt-10" href="#">Đọc thêm</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>
