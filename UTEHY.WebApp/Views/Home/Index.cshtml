<section id="home" class="container">
    <div class="container-fluid p-0">
        <div style="height:380px;width:1140px;background-color:red"></div>
    </div>
</section>

<section>
    <div class="container">
        <div class="section-title mt-0 mb-0">
            <div class="row">
                <div class="col-md-8">
                    <h1 class="mt-0 line-height-1" style="color: #5D9CEC;">TIN NỔI BẬT</h1>
                    <div class="double-line-bottom-theme-colored-2"></div>
                </div>
            </div>
        </div>
        <div class="section-content">
            <div class="row">
                <div class="col-md-6 mb-sm-30">
                    <div>
                        <div class="effect-wrapper">
                            <div class="thumb">
                                <img class="img-fullwidth" style="border-radius:5px" src="@Model.BaiGhim.Img" alt="project">
                            </div>
                            <div>
                                <a href="#"><i class="fa fa-calendar"></i>@Model.BaiGhim.CreateDate.ToString("dd/MM/yyyy")</a>
                                <a href="#">
                                    <h3 style="margin: 5px;">@Model.BaiGhim.Name</h3>
                                </a>
                                <span style="text-align: justify;">
                                    @Model.BaiGhim.Description
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-sm-30">
                    @{
                        foreach (var item in Model.TinTucs.Take(5))
                        {
                            <div class="item">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <div>
                                            <img style="border-radius:5px;width:100%;height:90px" src="@item.Img">
                                        </div>
                                    </div>
                                    <div class="col-sm-8 pl-0">
                                        <div>
                                            <a href="#"><i class="fa fa-calendar"></i>@item.CreateDate.ToString("dd/MM/yyyy")</a>
                                            <a href="#">
                                                <h4 style="margin: 5px;">@item.Name</h4>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>

